{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": false,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Other */
    "baseUrl": ".", // This is important for paths to work correctly
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "node", "vite/client"
    ],
    "outDir": "./js",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "js"]
}
